FROM darthjee/ruby_node:0.2.1 as builder

RUN npm install bower -g
RUN gem install bundler

ADD rails_bower_home/* /home/app/app/

WORKDIR /home/app/app
RUN bundle install --clean

USER app
RUN bower install

FROM darthjee/ruby_node:0.2.1

RUN npm install bower -g

COPY --from=builder /usr/local/bundle /usr/local/bundle
COPY --from=builder /home/app/.cache /home/app/.cache
RUN chown app.app /home/app/.cache /usr/local/bundle -R
USER app
